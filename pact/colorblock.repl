;; -----------------------------
;; Prepare
;; -----------------------------

(begin-tx)

(define-namespace 'test (sig-keyset) (sig-keyset))
(env-data { 
  "ns": "test",
  "cb-admin-keyset": {"keys": ["admin"]},
  "cb-admin-keyset-copy": {"keys": ["admin-copy"]},
  "alice-keyset": {"keys": ["alice"]},
  "bob-keyset": {"keys": ["bob"]},
  "lucy-keyset": {"keys": ["lucy"]},
  "jack-keyset": {"keys": ["jack"]},
  "upgrade": false
})
(load "poly-fungible-v1.pact")

(load "fungible-util.pact")

(load "coin/fungible-v1.pact")
(load "coin/coin.pact")
(load "colorblock.pact")

(commit-tx)

(begin-tx)
(namespace 'test)

;; -----------------------------
;; Account
;; -----------------------------

;
; create account in COIN module
;
(coin.create-account "admin" (read-keyset "cb-admin-keyset"))
(coin.create-account "bob" (read-keyset "bob-keyset"))
(coin.create-account "alice" (read-keyset "alice-keyset"))
(coin.create-account "lucy" (read-keyset "lucy-keyset"))
(coin.create-account "jack" (read-keyset "jack-keyset"))

;
; create account in COLORBLOCK module
;

(expect
  "Create successfully for the first time"
  "Write succeeded"
  (colorblock.create-account-maybe "token-id" "admin" (read-keyset "cb-admin-keyset"))
)
(expect
  "No failure but nothing happened for the second time"
  "Account already exists"
  (colorblock.create-account-maybe "token-id" "admin" (read-keyset "cb-admin-keyset"))
)
(expect
  "Create successfully for the another token"
  "Write succeeded"
  (colorblock.create-account-maybe "token-id-other" "admin" (read-keyset "cb-admin-keyset"))
)
(expect-failure
  "Create failed when keyset not matched"
  "Guard must match the same account of KDA"
  (colorblock.create-account-maybe "token-for-bob" "admin" (read-keyset "bob-keyset"))
)
(expect-failure
  "Create failed when token:account exists"
  "row found for key token-id:admin"
  (colorblock.create-account "token-id" "admin" (read-keyset "cb-admin-keyset"))
)
(expect
  "Create successfully for the another account"
  "Write succeeded"
  (colorblock.create-account-maybe "token-id" "bob" (read-keyset "bob-keyset"))
)

;
; query default account
;

(expect
  "Get default balance of token:account"
  0.0
  (colorblock.get-balance "token-id" "admin")
)
(expect-failure
  "Get balance failed when token:account not exists"
  "row not found: token-id:alice"
  (colorblock.get-balance "token-id" "alice")
)

(expect
  "Get default object of token:account"
  true
  (=
    { "token": "token-id",
      "account": "admin",
      "balance": 0.0,
      "guard": (read-keyset "cb-admin-keyset")
    }
    (colorblock.details "token-id" "admin")
  )
)

;
; rotate account
;

(expect-failure
  "Rotate will fail as user have no sig"
  "Keyset failure"
  (colorblock.rotate "token-id" "admin" (read-keyset "cb-admin-keyset"))
)

(env-sigs [{"key": "admin", "caps": []}])
(expect
  "Rotate will succeed with sig"
  "Write succeeded"
  (colorblock.rotate "token-id" "admin" (read-keyset "cb-admin-keyset"))
)
(env-sigs [
  {"key": "admin", "caps": []},
  {"key": "admin-copy", "caps": []}
])
(coin.rotate "admin" (read-keyset 'cb-admin-keyset-copy))
(expect-failure
  "Rotate failed when keyset not matched"
  "Guard must match the same account of KDA"
  (colorblock.rotate "token-id" "admin" (read-keyset "cb-admin-keyset"))
)
(expect
  "Rotate will succeed with sig"
  "Write succeeded"
  (colorblock.rotate "token-id" "admin" (read-keyset "cb-admin-keyset-copy"))
)
(coin.rotate "admin" (read-keyset 'cb-admin-keyset))
(colorblock.rotate "token-id" "admin" (read-keyset "cb-admin-keyset"))


;; -----------------------------
;; Item
;; -----------------------------

;
; create item
;

(expect-failure
  "Creating will fail as title is blank"
  "Title can not be empty"
  (colorblock.create-item "item-id" "" "colors" 1 1 1 [1.0] "admin" 1.0 (read-keyset "cb-admin-keyset"))
)

(expect-failure
  "Creating will fail as row length is smaller than limit"
  "the number of rows in each frame expected in range of"
  (colorblock.create-item "item-id" "title" "colors" 1 1 1 [1.0] "admin" 1.0 (read-keyset "cb-admin-keyset"))
)

(expect-failure
  "Creating will fail as color length is wrong"
  "the length of colors is not correct"
  (colorblock.create-item "item-id" "title" "colors" 2 1 1 [1.0] "admin" 1.0 (read-keyset "cb-admin-keyset"))
)

(expect-failure
  "Creating will fail as cols length is smaller than limit"
  "the number of cols in each frame expected in range of"
  (colorblock.create-item "item-id" "title" "colorscolors" 2 1 1 [1.0] "admin" 1.0 (read-keyset "cb-admin-keyset"))
)

(expect-failure
  "Creating will fail as colors contains illegal character"
  "not a digit"
  (colorblock.create-item "item-id" "title" "colorscolorscolorscolors" 2 2 1 [1.0] "admin" 1.0 (read-keyset "cb-admin-keyset"))
)

(expect-failure
  "Creating will fail as frames count is illegal"
  "the number of frames expected in range of"
  (colorblock.create-item "item-id" "title" "" 2 2 0 [1.0] "admin" 1.0 (read-keyset "cb-admin-keyset"))
)

(expect-failure
  "Creating will fail as frames count is illegal"
  "the number of frames expected in range of"
  (colorblock.create-item "item-id" "title" "" 
    4 4 17 [1.0] "admin" 1.0 (read-keyset "cb-admin-keyset"))
)
(expect-failure
  "Creating will fail as intervals count not equal to frame"
  "Interval count must equal to the number of frames"
  (colorblock.create-item "item-id" "title" "aaaaaabbbbbbccccccddddddaaaaaabbbbbbccccccddddddaaaaaabbbbbbccccccddddddaaaaaabbbbbbccccccdddddd"
    4 4 1 [0.5 0.5] "admin" 1.0 (read-keyset "cb-admin-keyset"))
)
(expect-failure
  "Creating will fail as intervals count not equal to frame"
  "Interval should between"
  (colorblock.create-item "item-id" "title" "aaaaaabbbbbbccccccddddddaaaaaabbbbbbccccccddddddaaaaaabbbbbbccccccddddddaaaaaabbbbbbccccccdddddd"
    4 4 1 [0.001] "admin" 1.0 (read-keyset "cb-admin-keyset"))
)
(expect-failure
  "Creating will fail as intervals count not equal to frame"
  "Interval should between"
  (colorblock.create-item "item-id" "title" "aaaaaabbbbbbccccccddddddaaaaaabbbbbbccccccddddddaaaaaabbbbbbccccccddddddaaaaaabbbbbbccccccdddddd"
    4 4 1 [1.1] "admin" 1.0 (read-keyset "cb-admin-keyset"))
)

(expect-failure
  "Creating will fail without capability"
  "Managed capability not installed: (test.colorblock.MINT"
  (colorblock.create-item "item-id" "title" "aaaaaabbbbbbccccccdddddd" 2 2 1 [1.0] "admin" 1.0 (read-keyset "cb-admin-keyset"))
)

(expect-failure
  "Creating will fail without capability"
  "precision violation"
  (colorblock.create-item "item-id" "title" "aaaaaabbbbbbccccccdddddd" 2 2 1 [1.0] "admin" 1.2 (read-keyset "cb-admin-keyset"))
)

(env-sigs [{"key": "bob", "caps": [(colorblock.MINT "item-id" "admin")]}])
(expect-failure
  "Creating will fail with incorrect capability"
  "Keyset failure (keys-all): [admin]"
  (colorblock.create-item "item-id" "title" "aaaaaabbbbbbccccccdddddd" 2 2 1 [1.0] "admin" 1.0 (read-keyset "cb-admin-keyset"))
)

(env-sigs [{"key": "admin", "caps": [(colorblock.MINT "item-id" "bob")]}])
(expect-failure
  "Creating will fail with incorrect capability"
  "Managed capability not installed: (test.colorblock.MINT"
  (colorblock.create-item "item-id" "title" "aaaaaabbbbbbccccccdddddd" 2 2 1 [1.0] "admin" 1.0 (read-keyset "cb-admin-keyset"))
)

(env-sigs [{"key": "admin", "caps": [
  (colorblock.CREDIT "item-id" "admin"),
  (colorblock.DEBIT "item-id" "admin")
]}])
(expect-failure
  "Creating will fail with incorrect capability"
  "Managed capability not installed: (test.colorblock.MINT"
  (colorblock.create-item "item-id" "title" "aaaaaabbbbbbccccccdddddd" 2 2 1 [1.0] "admin" 1.0 (read-keyset "cb-admin-keyset"))
)

(env-sigs [{"key": "admin", "caps": [(colorblock.MINT "item-id-other" "admin")]}])
(expect-failure
  "Creating will fail with incorrect capability"
  "Managed capability not installed: (test.colorblock.MINT"
  (colorblock.create-item "item-id" "title" "aaaaaabbbbbbccccccdddddd" 2 2 1 [1.0] "admin" 1.0 (read-keyset "cb-admin-keyset"))
)

(env-sigs [{"key": "admin", "caps": [(colorblock.MINT "item-id" "admin")]}])
(expect
  "Creating will succeed with capability"
  "Write succeeded"
  (colorblock.create-item "item-id" "title" "aaaaaabbbbbbccccccdddddd" 2 2 1 [1.0] "admin" 1.0 (read-keyset "cb-admin-keyset"))
)

(commit-tx)

(begin-tx)
(namespace 'test)

(env-sigs [{"key": "admin", "caps": [(colorblock.MINT "item-id" "admin")]}])
(expect-failure
  "Creating will fail as item is duplicate"
  "The item is already existed"
  (colorblock.create-item "item-id" "title" "aaaaaabbbbbbccccccdddddd" 2 2 1 [1.0] "admin" 1.0 (read-keyset "cb-admin-keyset"))
)


;; -----------------------------
;; Transfer
;; -----------------------------


(expect-failure
  "Transfer will fail as sender is same with receiver"
  "sender cannot be the receiver of a transfer"
  (colorblock.transfer "item-id" "admin" "admin" 1.0)
)

(expect-failure
  "Transfer will fail as receiver is illegal"
  "minimum account length"
  (colorblock.transfer "item-id" "admin" "a" 1.0)
)

(expect-failure
  "Transfer will fail as receiver is illegal"
  "Managed capability not installed: (test.colorblock.TRANSFER"
  (colorblock.transfer "item-id" "admin" "bob" 1.0)
)

(env-sigs [{"key": "admin", "caps": [(colorblock.TRANSFER "item-id-other" "admin" "bob" 1.0)]}])
(expect-failure
  "Transfer will fail with incorrect capability"
  "Managed capability not installed: (test.colorblock.TRANSFER"
  (colorblock.transfer "item-id" "admin" "bob" 1.0)
)

(env-sigs [{"key": "admin", "caps": [(colorblock.TRANSFER "item-id-other" "admin" "alice" 1.0)]}])
(expect-failure
  "Transfer will fail with incorrect capability"
  "Managed capability not installed: (test.colorblock.TRANSFER"
  (colorblock.transfer "item-id" "admin" "bob" 1.0)
)

(env-sigs [{"key": "bob", "caps": [(colorblock.TRANSFER "item-id" "admin" "bob" 1.0)]}])
(expect-failure
  "Transfer will fail with incorrect capability"
  "Keyset failure (keys-all): [admin]"
  (colorblock.transfer "item-id" "admin" "bob" 1.0)
)

(env-sigs [{"key": "admin", "caps": [(colorblock.TRANSFER "item-id" "admin" "bob" 1.0)]}])
(expect-failure
  "Transfer will fail as receiver is not created"
  "row not found: item-id:bob"
  (colorblock.transfer "item-id" "admin" "bob" 1.0)
)

(env-sigs [{"key": "admin", "caps": [(colorblock.TRANSFER "item-id" "admin" "bob" 1.0)]}])
(expect
  "Transfer-create will be successfully with correct capability"
  "Write succeeded"
  (colorblock.transfer-create "item-id" "admin" "bob" (read-keyset "bob-keyset") 1.0)
)

(env-sigs [{"key": "admin", "caps": [(colorblock.CREDIT "item-id" "admin")]}])
(expect-failure
  "Cannot directly credit"
  "require-capability: not granted"
  (colorblock.credit "item-id" "admin" (read-keyset "cb-admin-keyset") 1.0)
)

(env-sigs [{"key": "admin", "caps": [(colorblock.DEBIT "item-id" "admin")]}])
(expect-failure
  "Cannot directly credit"
  "require-capability: not granted"
  (colorblock.debit "item-id" "admin" 1.0)
)

